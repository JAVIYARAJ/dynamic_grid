<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dynamic Form</title>
</head>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css
">

<style>
</style>

<body>
    <div class="container-fluid mt-3" id="alert-box">

    </div>
    <div class="container-fluid mt-3">
        <table class="table" id="table" border="1">
            <tr>
                <th>NO</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Save</th>
            </tr>
            <tbody id="tbody">


                <% for (var i=0; i <data.length; i++) { %>
                    <tr>
                        <% for (var j=0; j <id.length; j++) { %>
                            <td>
                                <input class="form-control <%=data[i][id[0]]%>" type="text"
                                    value="<%= data[i][id[j]] %>" <% if( id[j]==='id' ){%>
                                readonly
                                <%} %> >
                            </td>
                            <%}%>
                                <td>
                                    <p class="btn btn-primary" onclick="updateData('<%=data[i].id %>')">Save</p>
                                </td>
                    </tr>
                    <%}%>
            </tbody>
        </table>
        <p class="btn btn-primary" onclick="addRow()">Add</p>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js
"></script>

<script>


    let count;
    let records;
    getId();
    async function getId() {
        const response = await fetch('/id');
        const data = await response.json();
        records = data.id + 1;
        count = data.id + 1;
    }


    async function updateData(id) {

        const allInputs = document.getElementsByClassName(id);
        let values = [];
        for (let i = 0; i < allInputs.length; i++) {
            values[i] = allInputs[i].value;
        }

        console.log(`id value ${id}`);
        console.log(`count value ${count}`);
        if (parseInt(id) >= records) {

            const result = await fetch(`/insert/?values=${values}`);

            let content = `
            <div class="alert alert-primary" role="alert">
            Data Insert Successfully..
            </div>`;
            const alert = document.getElementById('alert-box');
            alert.innerHTML = content;

            setTimeout(() => {
                alert.innerHTML = ''
            }, 2000);
        } else {




            const result = await fetch(`/update/?values=${values}`);

            let content = `
            <div class="alert alert-primary" role="alert">
            Data Update Successfully..
            </div>`;
            const alert = document.getElementById('alert-box');
            alert.innerHTML = content;

            setTimeout(() => {
                alert.innerHTML = ''
            }, 2000);
        }

    }

    async function addRow() {


        let content = `
            <td>
                <input type="text" class="form-control ${count}" readonly value=${count}>
            </td>
            <td>
                <input type="text" class="form-control ${count}">
            </td>
            <td>
                <input type="text" class="form-control ${count}">
            </td>
            <td>
                <input type="text" class="form-control ${count}">
            </td>
            <td>
                <p class="btn btn-primary" onclick=updateData('${count}')>Save</p>
            </td>
        `;
        const tr = document.createElement('tr');
        tr.innerHTML = content;
        const table = document.getElementById('tbody');
        table.appendChild(tr);
        count++;
    }
</script>

</html>